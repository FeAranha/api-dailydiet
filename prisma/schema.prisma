generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String   @id @default(uuid())
  name          String
  email         String   @unique
  password_hash String
  avatar        String?
  created_at    DateTime @default(now())
  Meal          Meal[]

  @@map("users")
}

model Meal {
  id           String   @id @default(uuid())
  description  String
  mealDateTime DateTime
  isDiet       Boolean
  user         User     @relation(fields: [userId], references: [id])
  userId       String

  @@map("meals")
}
